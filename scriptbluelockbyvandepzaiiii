-- Khởi tạo
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Mouse = LocalPlayer:GetMouse()
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local Workspace = game:GetService("Workspace")
local TweenService = game:GetService("TweenService")

-- Biến toàn cục
_G.Vandepzaiii = {
    Aimbot = false,
    AutoGoal = false,
    ESP = false,
    SpeedHack = 16,
    InfiniteStamina = false,
    AutoGrabBall = false,
    InfiniteSpins = false,
    UnlockEmotes = false,
    AutoSlide = false,
    Fly = false,
    GodMode = false,
    BallSize = 1,
    AuraRange = 20
}

-- Tạo GUI hiện đại (phong cách độc đáo)
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = game.CoreGui
ScreenGui.Name = "VandepzaiiiHub"
ScreenGui.ResetOnSpawn = false

-- Khung chính (gradient đỏ-xanh dương)
local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 450, 0, 550)
Frame.Position = UDim2.new(0.5, -225, 0.5, -275)
Frame.BackgroundColor3 = Color3.fromRGB(20, 20, 30)
Frame.BorderSizePixel = 0
Frame.Parent = ScreenGui
local Gradient = Instance.new("UIGradient")
Gradient.Color = ColorSequence.new{ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 0, 0)), ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 0, 255))}
Gradient.Rotation = 45
Gradient.Parent = Frame

-- Thanh tiêu đề (hiệu ứng neon)
local TitleBar = Instance.new("Frame")
TitleBar.Size = UDim2.new(1, 0, 0, 60)
TitleBar.BackgroundColor3 = Color3.fromRGB(10, 10, 20)
TitleBar.BorderSizePixel = 0
TitleBar.Parent = Frame
local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, 0, 1, 0)
Title.Text = "Vandepzaiii Hub - Blue Lock"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextScaled = true
Title.BackgroundTransparency = 1
Title.Font = Enum.Font.GothamBold
Title.Parent = TitleBar
local Neon = Instance.new("UIStroke")
Neon.Thickness = 2
Neon.Color = Color3.fromRGB(0, 255, 255)
Neon.Parent = Title

-- Hàm tạo nút (hiệu ứng hover)
local function CreateButton(name, position, callback)
    local Button = Instance.new("TextButton")
    Button.Size = UDim2.new(0, 400, 0, 45)
    Button.Position = position
    Button.Text = name
    Button.TextColor3 = Color3.fromRGB(255, 255, 255)
    Button.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
    Button.BorderSizePixel = 0
    Button.Font = Enum.Font.Gotham
    Button.TextScaled = true
    Button.Parent = Frame

    -- Hiệu ứng hover
    Button.MouseEnter:Connect(function()
        TweenService:Create(Button, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(60, 60, 80)}):Play()
    end)
    Button.MouseLeave:Connect(function()
        TweenService:Create(Button, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(40, 40, 50)}):Play()
    end)

    Button.MouseButton1Click:Connect(function()
        callback()
        Button.BackgroundColor3 = _G.Vandepzaiii[name:match("Bật/Tắt (.+)")] and Color3.fromRGB(0, 255, 0) or Color3.fromRGB(40, 40, 50)
    end)
    return Button
end

-- Danh sách nút (Việt hóa)
local buttons = {
    {"Bật/Tắt Ngắm Tự Động", UDim2.new(0, 25, 0, 80), function() _G.Vandepzaiii.Aimbot = not _G.Vandepzaiii.Aimbot print("Ngắm Tự Động: " .. (_G.Vandepzaiii.Aimbot and "BẬT" or "TẮT")) end},
    {"Bật/Tắt Tự Động Ghi Bàn", UDim2.new(0, 25, 0, 130), function() _G.Vandepzaiii.AutoGoal = not _G.Vandepzaiii.AutoGoal print("Tự Động Ghi Bàn: " .. (_G.Vandepzaiii.AutoGoal and "BẬT" or "TẮT")) end},
    {"Bật/Tắt Hiện Tên", UDim2.new(0, 25, 0, 180), function() _G.Vandepzaiii.ESP = not _G.Vandepzaiii.ESP print("Hiện Tên: " .. (_G.Vandepzaiii.ESP and "BẬT" or "TẮT")) end},
    {"Tăng Tốc (x3)", UDim2.new(0, 25, 0, 230), function() _G.Vandepzaiii.SpeedHack = 48 print("Tăng Tốc: x3") end},
    {"Bật/Tắt Vô Hạn Thể Lực", UDim2.new(0, 25, 0, 280), function() _G.Vandepzaiii.InfiniteStamina = not _G.Vandepzaiii.InfiniteStamina print("Vô Hạn Thể Lực: " .. (_G.Vandepzaiii.InfiniteStamina and "BẬT" or "TẮT")) end},
    {"Bật/Tắt Tự Động Cướp Bóng", UDim2.new(0, 25, 0, 330), function() _G.Vandepzaiii.AutoGrabBall = not _G.Vandepzaiii.AutoGrabBall print("Tự Động Cướp Bóng: " .. (_G.Vandepzaiii.AutoGrabBall and "BẬT" or "TẮT")) end},
    {"Bật/Tắt Vô Hạn Quay", UDim2.new(0, 25, 0, 380), function() _G.Vandepzaiii.InfiniteSpins = not _G.Vandepzaiii.InfiniteSpins print("Vô Hạn Quay: " .. (_G.Vandepzaiii.InfiniteSpins and "BẬT" or "TẮT")) end},
    {"Bật/Tắt Mở Khóa Emotes", UDim2.new(0, 25, 0, 430), function() _G.Vandepzaiii.UnlockEmotes = not _G.Vandepzaiii.UnlockEmotes print("Mở Khóa Emotes: " .. (_G.Vandepzaiii.UnlockEmotes and "BẬT" or "TẮT")) end},
    {"Bật/Tắt Tự Động Trượt", UDim2.new(0, 25, 0, 480), function() _G.Vandepzaiii.AutoSlide = not _G.Vandepzaiii.AutoSlide print("Tự Động Trượt: " .. (_G.Vandepzaiii.AutoSlide and "BẬT" or "TẮT")) end},
    {"Bật/Tắt Bay (Phím E)", UDim2.new(0, 25, 0, 530), function() _G.Vandepzaiii.Fly = not _G.Vandepzaiii.Fly print("Bay: " .. (_G.Vandepzaiii.Fly and "BẬT" or "TẮT")) end},
    {"Bật/Tắt Bất Tử", UDim2.new(0, 25, 0, 580), function() _G.Vandepzaiii.GodMode = not _G.Vandepzaiii.GodMode print("Bất Tử: " .. (_G.Vandepzaiii.GodMode and "BẬT" or "TẮT")) end}
}

for _, btn in pairs(buttons) do
    CreateButton(btn[1], btn[2], btn[3])
end

-- Aimbot
local function GetClosestPlayer()
    local closest, distance = nil, math.huge
    for _, player in pairs(Players:GetPlayers()) do
        if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
            local dist = (LocalPlayer.Character.HumanoidRootPart.Position - player.Character.HumanoidRootPart.Position).Magnitude
            if dist < distance and dist <= 50 then
                distance = dist
                closest = player
            end
        end
    end
    return closest
end

RunService.RenderStepped:Connect(function()
    if _G.Vandepzaiii.Aimbot and LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
        local target = GetClosestPlayer()
        if target and target.Character then
            Workspace.CurrentCamera.CFrame = CFrame.new(Workspace.CurrentCamera.CFrame.Position, target.Character.HumanoidRootPart.Position)
        end
    end
end)

-- Auto Goal (giả lập ghi bàn)
spawn(function()
    while true do
        if _G.Vandepzaiii.AutoGoal and LocalPlayer.Character then
            for _, ball in pairs(Workspace:GetChildren()) do
                if ball.Name == "Ball" and ball:IsA("BasePart") then
                    ball.CFrame = CFrame.new(Workspace.Goal.Position) -- Đưa bóng vào khung thành
                end
            end
        end
        wait(0.05)
    end
end)

-- ESP
local function AddESP(player)
    if player ~= LocalPlayer and player.Character then
        local Billboard = Instance.new("BillboardGui", player.Character.Head)
        Billboard.Size = UDim2.new(0, 100, 0, 50)
        Billboard.StudsOffset = Vector3.new(0, 3, 0)
        
        local Name = Instance.new("TextLabel", Billboard)
        Name.Size = UDim2.new(1, 0, 0.5, 0)
        Name.Text = player.Name
        Name.TextColor3 = Color3.fromRGB(255, 0, 0)
        Name.BackgroundTransparency = 1
        
        local Health = Instance.new("Frame", Billboard)
        Health.Size = UDim2.new(player.Character.Humanoid.Health / 100, 0, 0.5, 0)
        Health.Position = UDim2.new(0, 0, 0.5, 0)
        Health.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
    end
end

RunService.RenderStepped:Connect(function()
    if _G.Vandepzaiii.ESP then
        for _, player in pairs(Players:GetPlayers()) do
            if player.Character then
                AddESP(player)
            end
        end
    end
end)

-- Speed Hack
RunService.Stepped:Connect(function()
    if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") then
        LocalPlayer.Character.Humanoid.WalkSpeed = _G.Vandepzaiii.SpeedHack
    end
end)

-- Infinite Stamina
spawn(function()
    while true do
        if _G.Vandepzaiii.InfiniteStamina and LocalPlayer.Character then
            LocalPlayer.Character.Humanoid.WalkSpeed = _G.Vandepzaiii.SpeedHack -- Giữ tốc độ không giảm
        end
        wait(0.1)
    end
end)

-- Auto Grab Ball
spawn(function()
    while true do
        if _G.Vandepzaiii.AutoGrabBall and LocalPlayer.Character then
            for _, ball in pairs(Workspace:GetChildren()) do
                if ball.Name == "Ball" and ball:IsA("BasePart") then
                    ball.CFrame = LocalPlayer.Character.HumanoidRootPart.CFrame + Vector3.new(0, 2, 0)
                end
            end
        end
        wait(0.05)
    end
end)

-- Infinite Spins (giả lập)
spawn(function()
    while true do
        if _G.Vandepzaiii.InfiniteSpins then
            -- Giả lập quay (cần chỉnh nếu game có hệ thống spins cụ thể)
            print("Đang quay vô hạn...")
        end
        wait(1)
    end
end)

-- Unlock Emotes
spawn(function()
    while true do
        if _G.Vandepzaiii.UnlockEmotes and LocalPlayer.Character then
            -- Giả lập mở khóa emotes (cần dữ liệu game cụ thể)
            print("Đã mở khóa toàn bộ emotes!")
        end
        wait(5)
    end
end)

-- Auto Slide
spawn(function()
    while true do
        if _G.Vandepzaiii.AutoSlide and LocalPlayer.Character then
            LocalPlayer.Character.HumanoidRootPart.Velocity = LocalPlayer.Character.HumanoidRootPart.CFrame.lookVector * 50
            wait(0.5)
        end
        wait(0.1)
    end
end)

-- Fly Hack
local function Fly()
    local BV = Instance.new("BodyVelocity")
    BV.Velocity = Vector3.new(0, 0, 0)
    BV.MaxForce = Vector3.new(math.huge, math.huge, math.huge)
    BV.Parent = LocalPlayer.Character.HumanoidRootPart

    local BG = Instance.new("BodyGyro")
    BG.P = 9e4
    BG.MaxTorque = Vector3.new(9e9, 9e9, 9e9)
    BG.CFrame = LocalPlayer.Character.HumanoidRootPart.CFrame
    BG.Parent = LocalPlayer.Character.HumanoidRootPart

    UserInputService.InputBegan:Connect(function(input)
        if input.KeyCode == Enum.KeyCode.E and _G.Vandepzaiii.Fly then
            BV.Velocity = Vector3.new(0, 50, 0)
        end
    end)

    UserInputService.InputEnded:Connect(function(input)
        if input.KeyCode == Enum.KeyCode.E and _G.Vandepzaiii.Fly then
            BV.Velocity = Vector3.new(0, 0, 0)
        end
    end)

    RunService.Stepped:Connect(function()
        if _G.Vandepzaiii.Fly then
            BG.CFrame = Workspace.CurrentCamera.CFrame
            local move = LocalPlayer.Character.Humanoid.MoveDirection * 50
            BV.Velocity = Vector3.new(move.X, BV.Velocity.Y, move.Z)
        else
            BV:Destroy()
            BG:Destroy()
        end
    end)
end

LocalPlayer.CharacterAdded:Connect(Fly)
if LocalPlayer.Character then Fly() end

-- God Mode
RunService.Stepped:Connect(function()
    if _G.Vandepzaiii.GodMode and LocalPlayer.Character then
        LocalPlayer.Character.Humanoid.MaxHealth = math.huge
        LocalPlayer.Character.Humanoid.Health = math.huge
    end
end)

-- Thông báo
print("Vandepzaiii Hub - Đã Tải Thành Công! Siêu Hack Blue Lock: Rivals")
